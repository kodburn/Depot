<!DOCTYPE html>
<html>
    <head>
        <title>Depot</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'datturbolinktrack': 'reload' %>
        <%= javascript_include_tag 'application', 'datturbolinktrack': 'reload' %>
    </head>

    <body class="<%= controller.controller_name %>">
        <div id="banner">
            <%= form_tag root_path, :method => "get", class: 'locale' do %>
                <%= select_tag 'set_locale',
                    options_for_select(LANGUAGES, I18n.locale.to_s),
                    onchange: 'this.form.submit()' %>
                <%= submit_tag 'submit' %>
                <%= javascript_tag "$('.locale input').hide()" %>
            <% end %>
            <%= link_to(image_tag("logo.png"), root_path) %>
            <%= @page_title || t('.title') %>
        </div>
        <div id="columns">
            <div id="side">
              <% if @cart %>
                <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
                  <%= render @cart %>
                <% end %>
              <% end %>

                <ul>
                  <li><a href="#"><%= t('.home') %></a></li>
                  <li><a href="#"><%= t('.questions') %></a></li>
                  <li><a href="#"><%= t('.news') %></a></li>
                  <li><a href="#"><%= t('.contact') %></a></li>
                </ul>

                <% if session[:user_id] %>
                <ul>
                    <li><%= link_to 'Orders', orders_path %></li>
                    <li><%= link_to 'Products', products_path %></li>
                    <li><%= link_to 'Users', users_path %></li>
                </ul>
                <%= button_to 'Logout', logout_path, method: :delete %>
                <% end %>
            </div>
            <div id="main">
                <%= yield %>
            </div>
        </div>
    </body>
</html>
