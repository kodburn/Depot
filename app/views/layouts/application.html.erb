<!DOCTYPE html>
<html>
    <head>
        <title>Depot</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'datturbolinktrack': 'reload' %>
        <%= javascript_include_tag 'application', 'datturbolinktrack': 'reload' %>
    </head>

    <body class="<%= controller.controller_name %>">
        <div id="banner">
            <%= link_to(image_tag("logo.png"), root_path) %>
            <%= @page_title || "Pragmatic Bookshelf" %>
        </div>
        <div id="columns">
            <div id="side">
              <% if @cart %>
                <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
                  <%= render @cart %>
                <% end %>
              <% end %>

                <ul>
                    <li>
                        <a href="http://www....">Home</a>
                    </li>
                    <li>
                        <a href="http://www..../faq">Questions</a>
                    </li>
                    <li>
                        <a href="http://www..../news">News</a>
                    </li>
                    <li>
                        <a href="http://www..../contact">Contact</a>
                    </li>
                    <li>
                        <div id="time"><%= Time.now.to_formatted_s(:short) %></div>
                    </li>
                </ul>
            </div>
            <div id="main">
                <%= yield %>
            </div>
        </div>
    </body>
</html>
